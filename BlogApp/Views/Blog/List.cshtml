@model IEnumerable<Blog>

@{
  Layout="~/Views/Shared/_AdminLayout.cshtml";
}
   <div class="bg-primary text-white p-1 text-center">
      <h2>Blog List</h2>
    </div>
  <div class="container mt-3">

    
    <div>
      <a class="btn btn-primary" href="/Blog/Add">Create</a>
    </div>
    <hr/>

    <div class="col">
      @if(Model.Count()>0){
        
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>Image</th>
              <th>Title</th>
              <th>Date</th>
              <th>isApproved</th>
              <th>is Home</th>
              <th>is Slider</th>
              <th>View Count</th>
              <th style="width: 100px;">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            @foreach(var item in Model){

              <tr>
                <td>@item.BlogId</td>
                <td><img src="~/img/@item.Image" width="100"></td>
                <td>@item.Title</td>
                <td>@item.Date</td>
                <td>
                  
                  @if(item.isApproved)
                  {
                    <i class="fa fa-check" aria-hidden="true"></i>
                  }
                  else{
                    <i class="fa fa-times" aria-hidden="true"></i>
                  }
                </td>
                <td>
                  
                  @if(item.isHome)
                  {
                    <i class="fa fa-check" aria-hidden="true"></i>
                  }
                  else{
                    <i class="fa fa-times" aria-hidden="true"></i>
                  }
                  </td>
                  <td>
                   @if(item.isSlider)
                  {
                    <i class="fa fa-check" aria-hidden="true"></i>
                  }
                  else{
                    <i class="fa fa-times" aria-hidden="true"></i>
                  }
                  </td>
                  <td><b>@item.ViewCoun</b></td>
                <td>
                  <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>
                  <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                  <hr>
                  <a class="btn btn-primary btn-sm" asp-controller="Comment" asp-action="Index" asp-route-id="@item.BlogId">Check Comments</a>
                </td>


              </tr>
            
            }
           
          </tbody>
        </table>

      }
      else{
        <div class="alert alert-danger">
        Blog Eklenmemis</div>
      }

    </div>



  </div>