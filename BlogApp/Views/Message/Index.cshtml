@model IEnumerable<Message>

@{
  Layout="~/Views/Shared/_AdminLayout.cshtml";
}

   <div class="bg-primary text-white p-1 text-center ">
      <h2>Message List</h2>
    </div>
 <div class="container mt-3">


    <hr/>

    <div class="col">
      @if(Model.Count()>0){
        
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>Email</th>
              <th>Name</th>
              <th>Date</th>
              <th>Context</th>
              <th>Subject</th>
              <th>isRead</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            @foreach(var item in Model){

              <tr>
                <td>@item.MessageId</td>
                <td>@item.Email</td>
                <td>@item.Name</td>
                <td>@item.Date</td>
                <td>@item.Context</td>
                <td>@item.Subject</td>
                <td>
                  
                  @if(item.isRead)
                  {
                    <i class="fa fa-check" aria-hidden="true"></i>
                  }
                  else{
                    <i class="fa fa-times" aria-hidden="true"></i>
                  }
                </td> 
                <td>
                  <a class="btn btn-primary btn-sm" asp-controller="Message" asp-action="Details" asp-route-id="@item.MessageId">Read</a>
                  <a class="btn btn-danger btn-sm" asp-controller="Message" asp-action="Delete" asp-route-id="@item.MessageId">Delete</a>
                </td>


              </tr>
            
            }
           
          </tbody>
        </table>

      }
      else{
        <div class="alert alert-danger">
        Mesaj yok</div>
      }

    </div>



  </div>  