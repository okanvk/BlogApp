@model LoginModel

@{
  Layout="~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
<div class="row">
   
      <div class="col-md-9">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form class="form-horizontal" asp-controller="Account" asp-action="Register" method="POST">
          <fieldset>

            <div class="form-group">
  
              <label class="col-md-3 control-label" asp-for="Email">Mail</label>
              <div class="col-md-9">
                <input type="email" class="form-control"  asp-for="Email" />
              </div>
            </div>
             <div class="form-group">
              <label class="col-md-3 control-label" asp-for="Password">Password</label>
              <div class="col-md-9">
                <input  class="form-control"  asp-for="Password"/>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" asp-for="Name">Name</label>
              <div class="col-md-9">
                <input type="text" class="form-control"  asp-for="Name"/>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12 text-right">
                <button type="submit"   class="btn btn-primary btn-lg">Submit</button> 
              </div> 
            </div>
          </fieldset>
          </form>
          </div>
    </div>
 </div>
   