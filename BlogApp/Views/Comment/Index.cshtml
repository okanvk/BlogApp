@model IEnumerable<Comment>

@{
  Layout="~/Views/Shared/_AdminLayout.cshtml";
}
 <div class="bg-primary text-white p-1 text-center" >
      <h3>Check Comments</h3>
    </div>
  <div class="container mt-3">

    <div>
      <a class="btn btn-primary" href="/Blog/List">Geri DÃ¶n</a>
    </div>
    <hr/>



    <div class="col">
      @if(Model.Count()>0){
        
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>PublisherName</th>
              <th>Body</th>
              <th>Date</th>
              <th>isApproved</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            @foreach(var item in Model){

              <tr>
                <td>@item.CommentId</td>               
                <td>@item.PublisherName</td>
                <th>@item.Body</th>
                <td>@item.Date</td>
                <td>
                  
                  @if(item.isApproved)
                  {
                    <i class="fa fa-check" aria-hidden="true"></i>
                  }
                  else{
                    <i class="fa fa-times" aria-hidden="true"></i>
                  }
                <td>
                  <a class="btn btn-primary btn-sm" asp-controller="Comment" asp-action="Approve" asp-route-id="@item.CommentId">Onayla</a>
                  <a class="btn btn-danger btn-sm" asp-controller="Comment" asp-action="Delete" asp-route-id="@item.CommentId">Sil</a>
                </td>
              </tr>     
            }
          </tbody>
        </table>
      }
      else{
        <div class="alert alert-danger">
        Yorum bulunmamaktadir</div>
      }
    </div>
  </div>